<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/community_post_img"
        android:layout_width="107dp"
        android:layout_height="107dp"
        android:background="@drawable/background_round"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/community_post_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="하영쓰" />

        <TextView
            android:id="@+id/community_post_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Q. 새해 다짐 ?"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/community_post_content"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:text="2021 꼭 성공할거야~ 하하 ! "
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/community_post_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="2021.01.11"
            />
    </LinearLayout>


</LinearLayout>